<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/showing_include" />

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_below="@+id/codeTopToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/Button_Start_On_Service_Lifecycle_Example"
                android:text="开启服务"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                style="@style/showingOneTouchStyle" />

            <Button
                android:id="@+id/Button_Stop_On_Service_Lifecycle_Example"
                android:text="停止服务"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                style="@style/showingOneTouchStyle"/>

            <Button
                android:id="@+id/Button_Bind_On_Service_Lifecycle_Example"
                android:text="绑定服务"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                style="@style/showingOneTouchStyle"/>

            <Button
                android:id="@+id/Button_Unbind_On_Service_Lifecycle_Example"
                android:text="解绑服务"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                style="@style/showingOneTouchStyle"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>