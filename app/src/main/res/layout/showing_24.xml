<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/showing_include" />

    <ImageView
        android:id="@+id/ImageView_On_CameraExample"
        android:layout_below="@id/codeTopToolbar"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_above="@id/Button_On_CameraExample"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent" />


    <Button
        android:id="@+id/Button_On_CameraExample"
        android:text="Launch Camera"
        style="@style/showingOneTouchStyle"/>

</RelativeLayout>