<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/showing_include" />

    <TextView
        android:id="@+id/TextView_On_ChangeWIFIStateExample"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textAllCaps="true"
        android:text="Change WIFI State"
        android:textSize="58dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/Button_A_On_ChangeWIFIStateExample"
            android:text="Open WIFI"
            style="@style/showingMoreTouchStyle"/>

        <Button
            android:id="@+id/Button_B_On_ChangeWIFIStateExample"
            android:text="Close WIFI"
            style="@style/showingMoreTouchStyle"/>



    </LinearLayout>

</RelativeLayout>