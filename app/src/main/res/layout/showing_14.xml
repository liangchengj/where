<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/showing_include" />

    <LinearLayout
        android:layout_below="@+id/codeTopToolbar"
        android:layout_above="@id/Line_Bottom_On_ImageSwitcherExample"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TextView_On_ImageSwitcherExample"
            android:text="ImageSwitcher"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageSwitcher
            android:id="@+id/ImageSwitcher_On_ImageSwitcherExample"
            android:layout_width="60dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Line_Bottom_On_ImageSwitcherExample"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Button_Left_On_ImageSwitcherExample"
            android:text="PREVIOUS"
            style="@style/showingMoreTouchStyle" />

        <Button
            android:id="@+id/Button_Right_On_ImageSwitcherExample"
            android:text="NEXT"
            style="@style/showingMoreTouchStyle" />

    </LinearLayout>


</RelativeLayout>