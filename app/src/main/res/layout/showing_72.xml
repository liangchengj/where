<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/showing_include" />


    <LinearLayout
        android:layout_below="@+id/codeTopToolbar"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Id"
            android:imeOptions="flagNoFullscreen"
            android:textColor="@android:color/black"
            android:paddingLeft="5dp"
            android:id="@+id/EditText_Id_On_SQLiteDeleteExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:text="Delete"
            android:id="@+id/Button_On_SQLiteDeleteExample"
            style="@style/showingSQLiteTouchStyle"/>

    </LinearLayout>

</RelativeLayout>