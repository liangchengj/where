<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="appTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent
        </item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorEdgeEffect" tools:ignore="NewApi">#e0e0e0</item>
    </style>


    <style name="homeScrollviewTopRightTextView">
        <item name="android:textSize">22dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/homeScrollviewLeftEdge</item>
    </style>


    <style name="homeScrollviewTopRightCheckIcon">
        <item name="android:layout_height">@dimen/homeScrollviewTopRightCheckIconSize</item>
        <item name="android:layout_width">@dimen/homeScrollviewTopRightCheckIconSize</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">@dimen/homeScrollviewLeftEdge</item>
    </style>

    <style name="homeScrollviewTopRightToolBar">
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/scrollview_top_bar_drawable</item>
    </style>

    <style name="homeListToolBar">
        <item name="android:layout_height">76dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">homeListToolBarClick</item>
        <item name="android:background">@drawable/main_list_tool_bar_draw</item>
    </style>

    <style name="homeListToolBarLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/homeListLineRightEdge</item>
    </style>

    <style name="homeListToolBarBigText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/homeListTextLeftEdge</item>
        <item name="android:textColor">@color/homeListToolBarText</item>
        <item name="android:textSize">@dimen/homeListBigTextSize</item>
    </style>

    <style name="homeListToolBarSmallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/homeListTextLeftEdge</item>
        <item name="android:textColor">@color/homeListToolBarSmallText</item>
        <item name="android:textSize">@dimen/homeListSmallTextSize</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="homeListToolBarSimpleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/homeListTextLeftEdge</item>
        <item name="android:textSize">@dimen/homeListSimpleTextSize</item>
        <item name="android:textColor">@color/homeListToolBarText</item>
    </style>


    <style name="homeMainScrollview">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:alwaysDrawnWithCache">true</item>
    </style>


    <style name="homeListNextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">@dimen/homeMainNextButtonSize</item>
        <item name="android:layout_width">@dimen/homeMainNextButtonSize</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:background">@drawable/home_next_button</item>
        <item name="android:layout_marginRight">@dimen/homeMainNextButtonRightEdge</item>
    </style>

    <style name="homeListLeftIcon">
        <item name="android:layout_height">@dimen/homeListIconSize</item>
        <item name="android:layout_width">@dimen/homeListIconSize</item>
        <item name="android:layout_marginLeft">@dimen/homeListIconLeftEdge</item>
    </style>

    <style name="nextScrollViewTopRightButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/next_scrollview_top_right_button_drawable</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:onClick">topRightClick</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="showingMoreTouchStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="showingOneTouchStyle" parent="showingMoreTouchStyle">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="showingSQLiteTouchStyle" parent="showingOneTouchStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="showingTextInputTouchStyle" parent="showingOneTouchStyle">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="showingTipTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/showingTipText</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
